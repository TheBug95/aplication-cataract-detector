#:import dp kivy.metrics.dp

<ChoosePhotoScreen>:
    # Fondo blanco
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos:  self.pos
            size: self.size

    # Contenido centrado
    MDBoxLayout:
        orientation: "vertical"
        spacing: "24dp"
        padding: "48dp"
        size_hint: None, None
        size: self.minimum_size
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        # Título de la pantalla
        MDLabel:
            text: "Choose Photo"
            font_style: "H4"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]

        # Botón “Take Photo”
        MDFillRoundFlatButton:
            text: "Take Photo"
            size_hint: None, None
            size: dp(200), dp(48)
            pos_hint: {"center_x": 0.5}
            on_release: root.on_camera_button()

        # Botón “Select from Gallery”
        MDFillRoundFlatButton:
            text: "Select from Gallery"
            size_hint: None, None
            size: dp(200), dp(48)
            pos_hint: {"center_x": 0.5}
            on_release: root.on_gallery_button()
