#:import dp kivy.metrics.dp

<WelcomeScreen>:
    # ---------------- Fondo degradado “manual” ---------------------
    canvas.before:
        Color:
            rgba: 0.11, 0.54, 0.98, 1    # Azul claro
        Rectangle:
            pos:  self.pos
            size: self.size
        Color:
            rgba: 0.05, 0.28, 0.84, 1    # Azul oscuro parte superior
        Rectangle:
            pos:  self.pos
            size: self.size[0], self.size[1]*0.6

    # --------------- Layout vertical centrado ---------------------
    MDBoxLayout:
        orientation: "vertical"
        spacing: "32dp"
        padding: "48dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        adaptive_height: True

        # Icono cámara
        MDIcon:
            icon: "camera-outline"
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: "96sp"

        # Título “Welcome to”
        MDLabel:
            text: "Welcome to"
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_style: "H5"

        # Título “Visium”
        MDLabel:
            text: "Visium"
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_style: "H3"
            bold: True

        # Subtítulo
        MDLabel:
            text: "Analyze your eyes with AI technology"
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 0.9
            font_style: "Subtitle1"

        # Botón redondeado con tamaño fijo
        MDFillRoundFlatButton:
            text: "Get Started"
            size_hint: None, None
            size: dp(200), dp(48)
            pos_hint: {"center_x": 0.5}
            on_release:
                root.on_start_button()
